<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@color/ic_launcher_splashbg" />

    <!-- Main icon (centered) -->
    <item android:gravity="center">
        <bitmap android:src="@drawable/splash" />
    </item>

    <!-- Branding image (at the bottom) -->
    <item android:gravity="bottom|center_horizontal">
        <bitmap
            android:src="@drawable/branding_image"
            android:gravity="bottom"
            android:bottom="16dp" /> <!-- Adjust this value to set the distance from the bottom -->
    </item>
</layer-list>